[mysql]
# CLIENT #
prompt = [\h:\p] \d>\_
port                           = 6980
socket                         = /data/db/mysql6980/mysql6980.sock


[mysqld]

# GENERAL #
user                           = mysql
port                           = 6980
socket                         = /data/db/mysql6980/mysql6980.sock
basedir                        = /opt/mysql
datadir                        = /data/db/mysql6980/data
character-set-server           = utf8
collation-server               = utf8_bin
default-storage-engine         = InnoDB
pid-file                       = /data/dblogs/mysql6980/mysql.pid
tmpdir                         = /data/db/mysql6980/mysqltmp

# SAFETY #
skip-external-locking
skip-name-resolve
skip-host-cache
skip-slave-start
skip-character-set-client-handshake
max-allowed-packet             = 128M
max-connect-errors             = 100
local_infile                   = 0

# BINARY LOGGING #
log-bin                        = /data/dblogs/mysql6980/binlogs/mysql-bin
binlog-format                  = MIXED
max-binlog-size                = 512M
binlog-cache-size              = 2M
expire-logs-days               = 14
sync-binlog                    = 0

# LOGGING #
log-error                      = /data/dblogs/mysql6980/error.log
slow-query-log                 = 1
slow-query-log-file            = /data/dblogs/mysql6980/slowlogs/mysql-slow.log
long-query-time                = 0.5
log-queries-not-using-indexes  = 1

# MyISAM
key-buffer-size                = 512M
key-cache-block-size           = 4096
myisam-recover                 = FORCE,BACKUP
myisam-sort-buffer-size        = 32M
myisam-max-sort-file-size      = 64M

# INNODB
innodb-data-file-path          = ibdata1:2048M;ibdata2:1024M:autoextend:max:10G
innodb-buffer-pool-size        = 45G
innodb_buffer_pool_instances   = 8
innodb-log-file-size           = 512M
innodb-log-buffer-size         = 4M
innodb-flush-log-at-trx-commit = 2
innodb-table-locks             = 0
innodb-thread-concurrency      = 32
innodb-doublewrite             = 0
innodb-flush-method            = O_DIRECT
innodb-lock-wait-timeout       = 180
innodb-file-per-table          = 1
innodb-max-dirty-pages-pct     = 80
innodb-write-io-threads        = 16
innodb-read-io-threads         = 16
innodb-log-files-in-group      = 2
innodb-force-recovery          = 0
innodb_io_capacity             = 500
innodb_purge_threads           = 8
innodb_sync_array_size         = 1
innodb_sync_spin_loops         = 30


# CACHES AND LIMITS #
max-connections                = 1000
table-open-cache               = 4096
table-definition-cache         = 4096
sort-buffer-size               = 4M
read-buffer-size               = 4M
read-rnd-buffer-size           = 4M
tmp-table-size                 = 512M
max-heap-table-size            = 512M
query-cache-size               = 32M
query-cache-type               = 0
thread-cache-size              = 50
open-files-limit               = 65535
bulk-insert-buffer-size        = 128M
wait-timeout                   = 60
interactive-timeout            = 120


# REPLICATE-CFG
server-id                      = 620
relay-log                      = /data/dblogs/mysql6980/relaylogs/mysql-relay-bin
#log-slave-updates             = 1
read-only                      = 1
relay_log_purge                = 0
slave-skip-errors              = 1062,1146,1051
rpl_semi_sync_master_enabled   = 1
rpl_semi_sync_slave_enabled    = 1
rpl_semi_sync_master_timeout   = 1000
